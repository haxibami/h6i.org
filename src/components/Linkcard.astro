---
import { ArticleIcon, LinkIcon } from "@/components/Svg";
import { getLinkcard } from "@/lib/api";

interface Props {
  href: string;
}

const props = Astro.props;

const { description, image, title } = await getLinkcard(props.href);
---

<div>
  <a {...props} class="card">
    <div class="card-info">
      <span class="title">
        {title}
      </span>
      <span class="description">
        {description}
      </span>
      <span class="hostname">
        <LinkIcon class="link-icon" />
        <span>{new URL(props.href).hostname}</span>
      </span>
    </div>
    <div class="card-image">
      {
        image?.src ? (
          <img
            src={image.src}
            width={200}
            height="100%"
            alt=""
            class="image"
            decoding="async"
            loading="lazy"
          />
        ) : (
          <span class="placeholder">
            <ArticleIcon class="placeholder-icon" />
          </span>
        )
      }
    </div>
  </a>
</div>

<style>
  .card {
    display: flex;
    overflow: hidden;
    margin-top: 1rem;
    margin-bottom: 1rem;
    border-radius: 0.375rem;
    border: 2px solid var(--line);
    max-width: 36rem;
    height: 105px;
    transition-duration: 300ms;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    &:hover {
      background-color: var(--hover);
    }
  }

  .card-info {
    display: flex;
    overflow: hidden;
    padding: 1rem;
    flex-basis: 12rem;
    flex-direction: column;
    flex-grow: 1;
    flex-shrink: 1;
    white-space: nowrap;
    > * {
      overflow: hidden;
      text-overflow: ellipsis;
    }
  }

  .title {
    font-weight: bold;
  }

  .description {
    font-size: 0.8em;
    line-height: 1em;
    flex-grow: 1;
    color: var(--secondary);
  }

  .hostname {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8em;
    line-height: 1em;
  }

  .link-icon {
    height: 1rem;
    width: 1rem;
    fill: var(--secondary);
  }

  .card-image {
    display: flex;
    flex-basis: 6rem;
    max-width: 200px;
    flex-grow: 1;
    flex-shrink: 6;

    @media (max-width: 300px) {
      display: none;
    }

    & :global(img) {
      object-fit: cover;
    }
  }

  .placeholder {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    background-color: var(--shadow);
    fill: var(--fg);
  }

  .placeholder-icon {
    width: 2rem;
    height: 2rem;
  }
</style>
