---
import { ArticleIcon, LinkIcon } from "../components/Svg";
import { getCard } from "../lib/api";

interface Props {
  href: string;
}

const { href } = Astro.props;

const { description, image, title } = await getCard(href);
---

<div class="container">
  <a href={href}>
    <div class="card">
      <div class="info">
        <div class="title">
          {title}
        </div>
        <div class="description">
          {description}
        </div>
        <div class="hostname">
          <LinkIcon class="link-icon" />
          {new URL(href).hostname}
        </div>
      </div>
      <div class="image-container">
        {
          image?.src ? (
            <img
              src={image.src}
              width={200}
              height="100%"
              alt=""
              class="image"
              decoding="async"
            />
          ) : (
            <span class="placeholder">
              <ArticleIcon class="placeholder-icon" />
            </span>
          )
        }
      </div>
    </div>
  </a>
</div>

<style>
  .container {
    margin-top: 1rem;
    margin-bottom: 1rem;
    max-width: 36rem;
    transition-property: background-color, border-color, color, fill, stroke,
      opacity, box-shadow, transform;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 300ms;
    height: 105px;
    &:hover {
      background-color: var(--hover);
    }
  }
  .card {
    display: flex;
    overflow: hidden;
    margin-top: 1rem;
    margin-bottom: 1rem;
    border-radius: 0.375rem;
    border-width: 2px;
    border-style: solid;
    width: 100%;
    height: 100%;
    border-color: var(--line);
  }

  .info {
    display: flex;
    overflow: hidden;
    padding: 1rem;
    flex-basis: 11rem;
    flex-direction: column;
    flex-grow: 4;
    shrink: 1;
  }

  .title {
    overflow: hidden;
    font-weight: 700;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .description {
    overflow: hidden;
    font-size: 0.75rem;
    line-height: 1rem;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: var(--secondary);
    min-height: 2em;
  }

  .hostname {
    display: flex;
    overflow: hidden;
    gap: 0.375rem;
    align-items: center;
    height: 1.25rem;
    font-size: 0.75rem;
    line-height: 1rem;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .link-icon {
    height: 1rem;
    width: 1rem;
    fill: var(--fg);
  }

  .image-container {
    display: flex;
    flex-basis: 11rem;
    max-width: 200px;
    flex-shrink: 6;
    flex-grow: 1;
  }

  .image {
    object-fit: cover;
  }

  .placeholder {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    background-color: var(--shadow);
    fill: var(--fg);
  }

  .placeholder-icon {
    width: 2rem;
    height: 2rem;
  }
</style>
