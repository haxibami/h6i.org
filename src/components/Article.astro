---
import "katex/dist/katex.min.css";
import ImageHandler from "@/components/ImageHandler.astro";
import LinkHandler from "@/components/LinkHandler.astro";

import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"page" | "blog">;
}

const { post } = Astro.props;

const { Content } = await post.render();

export const components = {
  a: LinkHandler,
  img: ImageHandler,
};
---

<article id="post">
  <Content components={components} />
</article>

<style is:global>
  #post {
    flex-grow: 1;

    & section {
      margin-block: 1.5rem;
      border-top: 1px var(--fg25) solid;
    }

    & a:not(.card, .heading-link, .data-footnote-backref) {
      text-decoration-line: underline;
      text-decoration-thickness: 2px;
      text-underline-offset: 4px;
      margin-inline: 0.2em;
    }

    & p {
      margin-block: 0.75rem;
    }

    & table {
      display: block;
      overflow-x: auto;
      margin-block: 0.75rem;
      table-layout: fixed;
      border-collapse: collapse;
      text-align: center;

      & th,
      & td {
        border: 1px solid var(--fg25);
        padding: 0.25rem 0.5rem;
      }

      & th {
        background: var(--fg10);
      }
    }

    & ul {
      list-style-type: disc;
    }
    & ol {
      list-style-type: decimal;
    }
    & li {
      margin-block: 0.75rem;
      margin-left: 1rem;
      list-style-position: inside;
      & p {
        display: inline;
      }
    }
    & h1 {
      margin-top: 3rem;
    }
    & h2 {
      &::before {
        content: "##";
      }
      margin-top: 2rem;
      margin-bottom: 1rem;
    }
    & h3 {
      &::before {
        content: "###";
      }
      margin-top: 2rem;
      margin-bottom: 1rem;
    }
    & h4 {
      &::before {
        content: "####";
      }
      margin-top: 1.5rem;
      margin-bottom: 0.75rem;
    }
    & h5 {
      &::before {
        content: "#####";
      }
      margin-top: 1rem;
      margin-bottom: 0.5rem;
    }
    & h6 {
      &::before {
        content: "######";
      }
      margin-top: 0.5rem;
      margin-bottom: 0.25rem;
    }

    & h2,
    h3,
    h4,
    h5,
    h6 {
      border-left: 4px solid var(--fg);
      padding-left: 0.5rem;
      &:before {
        color: var(--accent);
        margin-right: 0.5rem;
        content: "";
      }
      &:hover {
        .heading-link-icon {
          &:after {
            vertical-align: 0.05em;
            content: "ðŸ”—";
            font-size: 0.8em;
            margin-left: 0.5rem;
          }
        }
      }
    }

    div.expressive-code {
      margin-block: 1rem;
    }

    code:not(div.expressive-code code) {
      font-family: var(--font-mono);
      background: var(--fg10);
      padding: 0.1rem;
      margin-inline: 0.2rem;
      border-radius: 0.2rem;
    }

    & .katex-display {
      overflow-y: hidden;
    }

    & img[id^="mermaid-"] {
      margin: 1rem auto;
    }
  }
</style>
