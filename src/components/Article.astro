---
import "katex/dist/katex.min.css";
import FigureHandler from "@/components/FigureHandler.astro";
import ImageHandler from "@/components/ImageHandler.astro";
import LinkHandler from "@/components/LinkHandler.astro";

import type { CollectionEntry } from "astro:content";

export interface Props {
  post: CollectionEntry<"page" | "blog">;
}

const { post } = Astro.props;

const { Content } = await post.render();

export const components = {
  a: LinkHandler,
  figure: FigureHandler,
  img: ImageHandler,
};
---

<article id="post">
  <Content components={components} />
</article>

<style is:global>
  #post {
    overflow-wrap: break-word;
    word-wrap: break-word;
    border-top: 1px solid var(--line);
    flex-grow: 1;

    & p,
    & li {
      & a {
        color: var(--link);
        text-decoration-line: underline;
        text-decoration-thickness: 2px;
        text-underline-offset: 4px;
        margin: 0 0.2em;
      }
    }

    & p:not(blockquote > p) {
      margin: 1.5rem 0 0 0;
    }

    & table {
      display: block;
      overflow-x: auto;
      margin-top: 1.5rem;
      table-layout: fixed;
      border-collapse: collapse;
      text-align: center;

      & th,
      & td {
        border: 1px solid var(--line);
        padding: 0.25rem 0.5rem;
      }

      & th {
        background: var(--hover);
      }
    }

    & code {
      font-family: var(--font-mono);
    }

    & ul {
      list-style-type: disc;
    }
    & ol {
      list-style-type: decimal;
    }
    & li {
      margin: 0.75rem 0 0 1rem;
      list-style-position: inside;
    }
    & h1 {
      margin-top: 3rem;
    }
    & h2,
    h3 {
      margin-top: 2rem;
      margin-bottom: 1rem;
    }
    & h2 {
      &::before {
        content: "##";
      }
    }
    & h3 {
      &::before {
        content: "###";
      }
    }
    & h4 {
      &::before {
        content: "####";
      }
      margin-top: 1.5rem;
      margin-bottom: 0.75rem;
    }
    & h5 {
      &::before {
        content: "#####";
      }
      margin-top: 1rem;
      margin-bottom: 0.5rem;
    }
    & h6 {
      &::before {
        content: "######";
      }
      margin-top: 0.5rem;
      margin-bottom: 0.25rem;
    }

    & h2,
    h3,
    h4,
    h5,
    h6 {
      &:before {
        color: var(--link);
        margin-right: 0.5rem;
      }
      &:hover {
        .heading-link-icon {
          &:after {
            vertical-align: 0.05em;
            content: "ðŸ”—";
            font-size: 0.8em;
            margin-left: 0.5rem;
          }
        }
      }
    }

    code:not(figure[data-rehype-pretty-code-figure] code) {
      background: var(--code);
      padding: 0.1rem 0.2rem;
      margin: 0 0.2rem;
      border-radius: 0.2rem;
    }

    & .katex-display {
      overflow-x: scroll;
      overflow-y: hidden;
    }

    & img[id^="mermaid-"] {
      background: var(--hover);
      border-radius: 0.375rem;
      margin: 1.5rem auto 0 auto;
      line-height: 1;
    }

    & .footnotes {
      margin-top: 1.5rem;
      border-top: 1px var(--line) solid;
      & li {
        list-style-position: unset;
      }
      & .data-footnote-backref {
        text-decoration: none;
      }
    }
  }
</style>
