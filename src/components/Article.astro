<article class="post">
  <slot />
</article>

<style is:global>
  .post {
    overflow-wrap: break-word;
    word-wrap: break-word;
    & p,
    & li {
      & a {
        color: var(--link);
        text-decoration-line: underline;
        text-decoration-thickness: 2px;
        text-underline-offset: 4px;
      }
    }
    & p {
      margin: 1.5rem 0 0 0;
    }
    & table {
      display: block;
      overflow-x: auto;
      margin-top: 1.5rem;
      table-layout: fixed;
      border-collapse: collapse;
      text-align: center;

      & th,
      & td {
        border: 1px solid var(--line);
        transition-property: border;
        transition-duration: 0.2s;
        transition-timing-function: ease;
        padding: 0.25rem 0.5rem;
      }

      & th {
        background: var(--hover);
        transition-property: background;
        transition-duration: 0.2s;
        transition-timing-function: ease;
      }
    }
    & :not(pre) > code {
      background: var(--code);
      transition-property: background;
      transition-duration: 0.2s;
      transition-timing-function: ease;
      padding: 0.1rem 0.2rem;
      border-radius: 0.2rem;
      font-family:
        ui-monospace,
        SFMono-Regular,
        SF Mono,
        Menlo,
        Monaco,
        Consolas,
        monospace;
    }

    & pre {
      margin: 0 0 1.5rem 0;
      border-radius: 0.375rem;
      overflow-x: auto;
      font-size: 0.9em;
      & code {
        font-size: inherit;
        line-height: inherit;
        font-weight: inherit;
        font-family: inherit;
        color: inherit;
        display: grid;
        counter-reset: line;
        font-family:
          ui-monospace,
          SFMono-Regular,
          SF Mono,
          Menlo,
          Monaco,
          Consolas,
          monospace;
      }
    }

    pre[data-theme*=" "],
    pre[data-theme*=" "] span {
      color: var(--shiki-light);
      background-color: var(--shiki-light-bg);
    }

    @media (prefers-color-scheme: dark) {
      pre[data-theme*=" "],
      pre[data-theme*=" "] span {
        color: var(--shiki-dark);
        background-color: var(--shiki-dark-bg);
      }
    }

    & figure[data-rehype-pretty-code-figure] {
      margin-top: 1.5rem;
      position: relative;
      & code {
        & span[data-line] {
          border-left: 4px solid transparent;
          padding: 0 1.25rem;
        }

        & > span[data-line]::before {
          counter-increment: line;
          content: counter(line);

          /* Other styling */
          display: inline-block;
          width: 1rem;
          margin-right: 1.25rem;
          text-align: right;
          color: var(--codelinenum);
        }

        & [data-line][data-highlighted-line] {
          border-left-color: var(--codehlsign);
          background: var(--codehl);
          span {
            background: unset;
          }
        }
        & mark[data-highlighted-chars] {
          background: var(--codefind);
          padding: 0.25rem;
          border-radius: 0.25rem;
        }

        & mark[data-highlighted-chars] span {
          background: unset;
        }
      }
      & pre {
        line-height: 1.5rem;
      }
      & figcaption[data-rehype-pretty-code-title] {
        & + pre {
          padding-bottom: 0.75rem;
          padding-top: 3rem;
        }
      }

      & pre:not(figcaption[data-rehype-pretty-code-title] + pre) {
        padding-top: 0.75rem;
        padding-bottom: 0.75rem;
      }
    }

    & figcaption[data-rehype-pretty-code-title] {
      position: absolute;
      top: 0;
      font-family:
        ui-monospace,
        SFMono-Regular,
        SF Mono,
        Menlo,
        Monaco,
        Consolas,
        monospace;
      white-space: nowrap;
      text-overflow: ellipsis;
      overflow: hidden;
      padding: 0.375rem 0.75rem;
      font-size: 0.85em;
      width: 100%;
      color: var(--codetitlefg);
      background: var(--codetitlebg);
      border-radius: 0.375rem 0.375rem 0 0;
      z-index: 1;
    }

    & .math-display {
      overflow: scroll;
    }
    & svg[id^="mermaid-"] {
      background: var(--mermaidbg);
      border-radius: 0.375rem;
      margin: 1.5rem auto 0 auto;
      line-height: 1;
    }
    & blockquote {
      & p {
        margin: 0;
      }
    }
    & ul {
      list-style-type: disc;
    }
    & ol {
      list-style-type: decimal;
    }
    & li {
      margin: 0.75rem 0 0 1rem;
      list-style-position: inside;
    }
    & h1 {
      margin-top: 3rem;
    }
    & h2 {
      margin-top: 2.5rem;
    }
    & h3 {
      margin-top: 2rem;
    }
    & h4 {
      margin-top: 1.5rem;
    }
    & h5 {
      margin-top: 1rem;
    }
    & h6 {
      margin-top: 0.5rem;
    }
    & .footnotes {
      margin-top: 1.5rem;
      border-top: 1px var(--line) solid;
      & li {
        list-style-position: unset;
      }
      & a {
        text-decoration: none;
      }
    }
    & [id^="user-content-fnref-"] {
      margin: 0 0.25em;
    }
    & iframe {
      margin: 0.5rem 0;
    }
  }
</style>
