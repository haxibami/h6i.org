---
import "katex/dist/katex.min.css";
import ImageHandler from "@/components/ImageHandler.astro";
import LinkHandler from "@/components/LinkHandler.astro";

import { render } from "astro:content";
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"page" | "blog">;
}

const { post } = Astro.props;

const { Content } = await render(post);

export const components = {
  a: LinkHandler,
  img: ImageHandler,
};
---

<article id="post">
  <Content components={components} />
</article>

<style is:global>
  #post {
    grid-row: content-start / content-end;
    border-bottom: 1.5px solid var(--ui-border);
    padding-bottom: 2rem;

    & section {
      margin-top: 2rem;
    }

    & a:not(.card, .heading-link, .data-footnote-backref) {
      text-decoration-line: underline;
      text-decoration-thickness: 1.5px;
      text-underline-offset: 4.5px;
      margin-inline: 0.1em;
    }

    & p {
      margin-block: 0.75rem;
    }

    & table {
      display: block;
      overflow-x: auto;
      margin-block: 1rem;
      text-align: center;

      & th,
      & td {
        border: 1px solid var(--ui-border);
        padding: 0.25rem 0.5rem;
      }
    }

    & ul {
      list-style-type: disc;
    }
    & ol {
      list-style-type: decimal;
    }
    & li {
      margin-block: 0.5rem;
      margin-left: 1rem;
      list-style-position: inside;
      & p {
        display: inline;
      }
    }
    & h2 {
      margin-top: 2rem;
      margin-bottom: 1rem;
    }
    & h3 {
      margin-top: 2rem;
      margin-bottom: 1rem;
    }
    & h4 {
      margin-top: 1.5rem;
      margin-bottom: 0.75rem;
    }
    & h5 {
      margin-top: 1rem;
      margin-bottom: 0.5rem;
    }
    & h6 {
      margin-top: 0.5rem;
      margin-bottom: 0.25rem;
    }

    & h2,
    h3,
    h4,
    h5,
    h6 {
      border-left: 4px solid var(--fg);
      padding-left: 0.75rem;
      &:hover {
        .heading-link-icon {
          &:after {
            vertical-align: 0.05em;
            content: "ðŸ”—";
            font-size: 0.8em;
            margin-left: 0.5rem;
          }
        }
      }
    }

    div.expressive-code {
      margin-block: 1rem;
    }

    code:not(div.expressive-code code) {
      font-family: var(--font-mono);
      background: var(--fg10);
      padding: 0.1rem;
      margin-inline: 0.2rem;
      border-radius: 0.2rem;
    }

    & .katex-display {
      overflow-y: hidden;
    }

    & figure.d2 {
      margin: 1rem auto;
      border: 1px solid var(--item-border);
      background: var(--code-bg);
      box-shadow: var(--ec-frm-frameBoxShdCssVal);
    }
  }
</style>
