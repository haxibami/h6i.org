---
import "katex/dist/katex.min.css";
---

<article id="post">
  <slot />
</article>

<style is:global>
  #post {
    overflow-wrap: break-word;
    word-wrap: break-word;
    border-top: 1px solid var(--line);
    flex-grow: 1;

    & p,
    & li {
      & a {
        color: var(--link);
        text-decoration-line: underline;
        text-decoration-thickness: 2px;
        text-underline-offset: 4px;
        margin: 0 0.2em;
      }
    }

    & p:not(blockquote > p) {
      margin: 1.5rem 0 0 0;
    }

    & table {
      display: block;
      overflow-x: auto;
      margin-top: 1.5rem;
      table-layout: fixed;
      border-collapse: collapse;
      text-align: center;

      & th,
      & td {
        border: 1px solid var(--line);
        padding: 0.25rem 0.5rem;
      }

      & th {
        background: var(--hover);
      }
    }

    & code {
      font-family:
        ui-monospace,
        SFMono-Regular,
        SF Mono,
        Menlo,
        Monaco,
        Consolas,
        monospace;
    }

    & ul {
      list-style-type: disc;
    }
    & ol {
      list-style-type: decimal;
    }
    & li {
      margin: 0.75rem 0 0 1rem;
      list-style-position: inside;
    }
    & h1 {
      margin-top: 3rem;
    }
    & h2,
    h3 {
      margin-top: 2rem;
      margin-bottom: 1rem;
    }
    & h4 {
      margin-top: 1.5rem;
      margin-bottom: 0.75rem;
    }
    & h5 {
      margin-top: 1rem;
      margin-bottom: 0.5rem;
    }
    & h6 {
      margin-top: 0.5rem;
      margin-bottom: 0.25rem;
    }

    & h2,
    h3,
    h4,
    h5,
    h6 {
      &:before {
        content: "#";
        color: var(--link);
        margin-right: 0.5rem;
      }
      &:hover {
        .heading-link-icon {
          &:after {
            vertical-align: 0.05em;
            content: "ðŸ”—";
            font-size: 0.8em;
            margin-left: 0.5rem;
          }
        }
      }
    }

    & code:not(figure[data-rehype-pretty-code-figure] code) {
      background: var(--code);
      padding: 0.1rem 0.2rem;
      margin: 0 0.2rem;
      border-radius: 0.2rem;
    }

    & figure[data-rehype-pretty-code-figure] {
      margin: 1.5rem 0 1rem 0;
      position: relative;
      font-size: 0.85rem;

      & code {
        counter-reset: line;

        & span[data-line] {
          border-left: 4px solid transparent;
          padding: 0 0.75rem;
        }

        & > span[data-line]::before {
          counter-increment: line;
          content: counter(line);
          display: inline-block;
          width: 1rem;
          margin-right: 1.25rem;
          text-align: right;
          color: var(--codelinenum);
        }

        & [data-line][data-highlighted-line] {
          border-left-color: var(--codehlsign);
          background: var(--codehl);
          & span {
            background: unset;
          }
        }

        & mark[data-highlighted-chars] {
          background: var(--codefind);
          padding: 0.25rem;
          border-radius: 0.25rem;
        }

        & mark[data-highlighted-chars] span {
          background: unset;
        }
      }

      /* Background & Layout */
      & pre {
        border-radius: 0.375rem;
        overflow-x: auto;
      }

      pre[data-theme*=" "],
      pre[data-theme*=" "] span {
        color: var(--shiki-light);
        background-color: var(--shiki-light-bg);
      }

      @media (prefers-color-scheme: dark) {
        pre[data-theme*=" "],
        pre[data-theme*=" "] span {
          color: var(--shiki-dark);
          background-color: var(--shiki-dark-bg);
        }
      }

      & figcaption[data-rehype-pretty-code-title] {
        & + pre {
          padding-bottom: 0.75rem;
          padding-top: 3rem;
        }
      }

      & pre:not(figcaption[data-rehype-pretty-code-title] + pre) {
        padding-top: 0.75rem;
        padding-bottom: 0.75rem;
      }

      /* Code title */
      & figcaption[data-rehype-pretty-code-title] {
        position: absolute;
        top: 0;
        font-family:
          ui-monospace,
          SFMono-Regular,
          SF Mono,
          Menlo,
          Monaco,
          Consolas,
          monospace;
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden;
        padding: 0.375rem 0.75rem;
        width: 100%;
        color: var(--codetitlefg);
        background: var(--codetitlebg);
        border-radius: 0.375rem 0.375rem 0 0;
      }
    }

    & .katex-display {
      overflow-x: scroll;
      overflow-y: hidden;
    }

    & svg[id^="mermaid-"] {
      background: var(--mermaidbg);
      border-radius: 0.375rem;
      margin: 1.5rem auto 0 auto;
      line-height: 1;
    }

    & .footnotes {
      margin-top: 1.5rem;
      border-top: 1px var(--line) solid;
      & li {
        list-style-position: unset;
      }
      & .data-footnote-backref {
        text-decoration: none;
      }
    }
  }
</style>
