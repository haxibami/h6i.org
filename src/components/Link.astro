---
import { Image } from "astro:assets";
import { LinkIcon } from "@/components/Svg";
import { getMetadata } from "@/lib/api";

interface Props {
  href: string;
}

const props = Astro.props;

const { title, description, image } = await getMetadata(props.href);
---

<div>
  <a {...props} class="card">
    <div class="card-info">
      <span class="title">
        {title}
      </span>
      <span class="description">
        {description}
      </span>
      <span class="hostname">
        <LinkIcon class="link-icon" />
        <span>{new URL(props.href).hostname}</span>
      </span>
    </div>
    {image && (
      <div class="card-image">
        <Image src={image.src} alt={title} width="400" height="210", format="avif" />
      </div>
    )}
  </a>
</div>

<style>
  .card {
    display: flex;
    overflow: hidden;
    justify-content: space-between;
    margin-block: 1.5rem;
    border-radius: 0.5rem;
    border: 1px solid var(--fg25);
    transition-duration: 300ms;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    &:hover {
      background-color: var(--fg10);
    }
  }

  .card-info {
    display: flex;
    flex-direction: column;
    overflow: hidden;
    padding: 1rem;
    white-space: nowrap;
    > * {
      overflow: hidden;
      text-overflow: ellipsis;
    }
  }

  .title {
    font-weight: bold;
  }

  .description {
    color: var(--fg75);
    font-size: 0.8em;
  }

  .hostname {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8em;
  }

  .link-icon {
    height: 1rem;
    width: 1rem;
    fill: var(--fg75);
  }

  .card-image {
    flex-basis: 200px;
    flex-shrink: 0;
    @media (max-width: 480px) {
      flex-basis: 105px;
    }

    & :global(img) {
      aspect-ratio: 40 / 21;
      object-fit: cover;
      width: 100%;
      height: 100%;
    }
  }
</style>
