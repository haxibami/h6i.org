---
const blog = new URL("/blog", Astro.url);
---

<!doctype html>
<html lang="ja">
  <head>
    <title>{`Redirecting to: ${blog}`}</title>
    <meta http-equiv="refresh" content=`0;url=${blog}` />
    <meta name="robots" content="noindex" />
    <link rel="canonical" href={blog} />
  </head>
  <body>
    <a href={blog}>
      Redirecting from <code>{Astro.url}</code> to <code>{blog}</code>
    </a>
  </body>
</html>
