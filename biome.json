{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "include": [
      "./**/*.ts",
      "./**/*.tsx",
      "./**/*.js",
      "./**/*.jsx",
      "./**/*.json",
      "./**/*.jsonc"
    ],
    "ignore": ["./node_modules/**", "./public/**", "./dist/**", "./.astro/**"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "semicolons": "always"
    }
  }
}
